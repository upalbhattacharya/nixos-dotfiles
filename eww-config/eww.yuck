(defvar show true)

(defpoll time :interval "1s"
              :initial "initial-value"  ; optional, defaults to poll at startup
              :run-while time-visible   ; optional, defaults to 'true'
  `date +%H:%M:%S`)

(defwindow central-bar
           :monitor 0
           :geometry (geometry :x "0px"
                               :y "5px"
                               :height "24px"
                               :anchor "top center")
           :stacking "fg"
           (time-widget))

(defwindow left-bar
           :monitor 0
           :geometry (geometry :x "0px"
                               :y "5px"
                               :height "24px"
                               :anchor "top left")
           :stacking "fg"
           (time-widget))

(defwindow right-bar
           :monitor 0
           :geometry (geometry :x "0px"
                               :y "5px"
                               :height "24px"
                               :anchor "top right")
           :stacking "fg"
           (time-widget))
                      
(defwidget time-widget []
           (box :halign "start"
                :valign "center"
                :orientation "horizontal"
                (revealer
                     :transition "crossfade"
                     :duration "1000ms"
                     :reveal show
                     (label :texttime))))